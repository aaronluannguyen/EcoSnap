<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/creds_Email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:text="Email"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creds_Email_Title" />

    <EditText
        android:id="@+id/creds_Password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPassword"
        android:text="******"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creds_Password_Title" />

    <TextView
        android:id="@+id/creds_Email_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/creds_Email"
        app:layout_constraintTop_toBottomOf="@+id/creds_last_name" />

    <TextView
        android:id="@+id/creds_Password_Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Password"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/creds_Password"
        app:layout_constraintTop_toBottomOf="@+id/creds_Email" />

    <Button
        android:id="@+id/btn_Creds_Cancel"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="48dp"
        android:background="@color/lightGray"
        android:text="CANCEL"
        android:textAllCaps="false"
        android:textColor="@color/place_autocomplete_prediction_primary_text"
        app:layout_constraintEnd_toStartOf="@+id/btn_Creds_Save"
        app:layout_constraintStart_toStartOf="@+id/creds_Password"
        app:layout_constraintTop_toBottomOf="@+id/creds_Password" />

    <Button
        android:id="@+id/btn_Creds_Save"
        android:layout_width="100dp"
        android:layout_height="36dp"
        android:background="@color/colorPrimary"
        android:text="Save"
        android:textColor="@color/navSelect"
        app:layout_constraintBottom_toBottomOf="@+id/btn_Creds_Cancel"
        app:layout_constraintEnd_toEndOf="@+id/creds_Password"
        app:layout_constraintTop_toTopOf="@+id/btn_Creds_Cancel" />

    <TextView
        android:id="@+id/creds_first_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="64dp"
        android:text="First Name"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/creds_first_name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/creds_last_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Last Name"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/creds_last_name"
        app:layout_constraintTop_toBottomOf="@+id/creds_first_name" />

    <EditText
        android:id="@+id/creds_last_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Last Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creds_last_name_title" />

    <EditText
        android:id="@+id/creds_first_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="First Name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/creds_first_name_title" />

</android.support.constraint.ConstraintLayout>