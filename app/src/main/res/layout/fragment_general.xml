<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.GeneralFragment">


    <ImageView
        android:id="@+id/imageView_general"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="24dp"
        android:src="@mipmap/ic_launcher"
        app:layout_constraintStart_toStartOf="@+id/textView2"
        app:layout_constraintTop_toBottomOf="@+id/button_general" />

    <Button
        android:id="@+id/button_general"
        android:layout_width="0dp"
        android:layout_height="36dp"
        android:text="BROWSE"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="@+id/bio_general"
        app:layout_constraintTop_toTopOf="@+id/textView2" />

    <EditText
        android:id="@+id/bio_general"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:ems="10"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:text="Bio"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/bio_general"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="24dp"
        android:text="Profile Picture"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="@+id/bio_general"
        app:layout_constraintTop_toBottomOf="@+id/bio_general" />

    <Button
        android:id="@+id/btn_save_general"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:background="@color/colorPrimary"
        android:text="SAVE"
        android:textAllCaps="false"
        android:textColor="@color/navSelect"
        app:layout_constraintEnd_toEndOf="@+id/bio_general"
        app:layout_constraintTop_toBottomOf="@+id/imageView_general" />

    <Button
        android:id="@+id/btn_cancel_general"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="48dp"
        android:background="@color/lightGray"
        android:text="CANCEL"
        app:layout_constraintStart_toStartOf="@+id/bio_general"
        app:layout_constraintTop_toBottomOf="@+id/imageView_general" />
</android.support.constraint.ConstraintLayout>